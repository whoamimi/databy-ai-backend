# ============================================
# Example Environment File
# ============================================
# Copy this file to `.env` and fill in your own values.
# Example:
#   cp .env.example .env
# ============================================

# ============ OLLAMA CONFIG ============
# Base model host (local or remote)
OLLAMA_HOST_URL=http://localhost:11434
LOCAL_OLLAMA_HOST_URL=http://localhost:11434
# Keep model loaded in memory for 15 minutes
OLLAMA_KEEP_ALIVE=15m


# ============ AGENT CONFIG ============
# Optional sandbox endpoint for isolated agent execution
AGENT_SANDBOX_URL=http://localhost:9000


# ============ LIVEKIT CONFIG ============
# Real-time communication (audio/video/streaming)
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
LIVEKIT_URL=wss://your-project-subdomain.livekit.cloud


# ============ OAUTH / EXTERNAL PLATFORMS ============
# Notion OAuth credentials
NOTION_CLIENT_ID=your_notion_client_id_here
NOTION_CLIENT_SECRET=your_notion_client_secret_here
NOTION_REDIRECT_URI=notion_callback_url


# ============ DATABASE CONFIG ============
# Redis (cache, task queue)
REDIS_URL=redis://localhost:6379
# MongoDB (main data store)
MONGODB_URL=mongodb://localhost:27017/databy


# ============ FASTAPI BACKEND ============
FASTAPI_BACKEND_HOST=127.0.0.1
FASTAPI_BACKEND_PORT=8000


# ============ WORKSPACE SETTINGS ============
DEBUG=True
LOG_LEVEL=DEBUG


# ============ INTERNAL / FRONTEND CONFIG ============
NEXT_PUBLIC_APP_CONFIG_ENDPOINT=http://localhost:8000/config
SANDBOX_ID=your_sandbox_id_here

# ============ API KEYS ============
HF_KEY=your_hugging_face_key
